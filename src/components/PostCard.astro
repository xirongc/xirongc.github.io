
---
// utils imports
import { slugify, formatDate } from "../js/utils";

// Astro.props will received from whatever file import this compenent for use
const { frontmatter, url, tagType } = Astro.props;
const { title, date, author, image, abstract, category, belongs } = frontmatter;    // distributely assign
---

<article class="postcard">
   <div class="category">
      <small><a href={`/category/${slugify(category)}/`}>{category}</a></small>
   </div>
   <div class="post-container">
      <a href={url} aria-hidden="true" tabindex="-1">
         <div class="figure">
            <img
               src={image.src}
               alt={image.alt}
            />
         </div>
      </a>
      <div class="post-content">
         <div>
            <h3 class="title">
               <a href={url}>{title}</a>
            </h3>
            <small>
               {author} â€¢ {formatDate(date)}
            </small>
            <p>{abstract}</p>
         </div>

         <div>
            <small>({belongs.type} - {belongs.conference})</small>
         </div>
      </div>
   </div>
</article>


<style>
   .postcard {
      margin: 1rem 0 0rem 0;
      padding: 1.5rem;
      border-radius: 0.7rem;
      /* border: solid; */
   }
   .post-container {
      display: flex;
   }
   /* post image size */
   .figure {
      width: 200px;
      height: 120px;
   }
   .figure img {
      border: solid 1px var(--color-black);
      border-radius: 0.3rem;
      object-fit: cover;
      width: 100%;
      height: 100%;
   }
   .figure img:hover {
      border-color: var(--color-hyperlink);
   }
   /* align the conference link to the card's bottom */
   .post-content {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      margin: 0 0 0 2rem;
   }
   .post-content a {
      font-size: 18px;
   }
   .post-content p {
      font-size: 14px;
      -webkit-line-clamp: 2;        /* Max number of lines you want to display */
      max-height: 90px;             /* Adjust based on your layout */
      margin: 0.2rem 0 0 0;
   }
   .post-content small {
      font-size: 11px;
      font-style: italic;
   }

   @media (max-width: 1100px) {
      .post-content a {
         font-size: 16px;
      }
      .post-content p {
         font-size: 13px;
      }
   }
   /* responsive */
   @media (max-width: 800px) {
      .post-container {
         flex-direction: column;
         align-items: flex-start;
      }
      .post-content {
         margin: 1rem 0 0 0;
      }
      .post-content a {
         font-size: 15px;
      }
      .post-content p {
         font-size: 12px;
      }
   }



</style>
